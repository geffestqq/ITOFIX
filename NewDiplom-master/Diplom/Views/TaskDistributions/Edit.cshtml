@using Diplom.Enums
@model Diplom.Models.TaskDistribution

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center colortext">Изменение</h1>

<h4 class="text-center colortext">Распределение задач</h4>
<hr />
<body class="body">
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="StartedAt" class="control-label colortext">Распределено</label>
                    <input asp-for="StartedAt" class="form-control" />
                    <span asp-validation-for="StartedAt" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PeriodValue" class="control-label colortext">Значение периода</label>
                    <input asp-for="PeriodValue" class="form-control" />
                    <span asp-validation-for="PeriodValue" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PeriodUnit" class="control-label colortext">Единица периода</label>
                    <select asp-for="PeriodUnit" asp-items="Html.GetEnumSelectList<PeriodUnitEnum>()">
                        <option selected="selected" value="">Выберите</option>
                    </select>
                    <span asp-validation-for="PeriodUnit" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PluralityId" class="control-label colortext">Совместительство</label>
                    <select asp-for="PluralityId" class="form-control" asp-items="ViewBag.PluralityId"></select>
                    <span asp-validation-for="PluralityId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ZadachiId" class="control-label colortext">Задача</label>
                    <select asp-for="ZadachiId" class="form-control" asp-items="ViewBag.ZadachiId"></select>
                    <span asp-validation-for="ZadachiId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="StatusId" class="control-label colortext">Статус</label>
                    <select asp-for="StatusId" class="form-control" asp-items="ViewBag.StatusId"></select>
                    <span asp-validation-for="StatusId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Сохранить" class="btn br0 btn-secondary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index" class="colortext">Обратно к распределению задач</a>
    </div>
</body>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
