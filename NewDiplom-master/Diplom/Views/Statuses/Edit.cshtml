@model Diplom.Models.Status

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center colortext">Изменение</h1>

<h4 class="text-center colortext">Статус</h4>
<body class="body">
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="Status_name" class="control-label colortext">Название статуса</label>
                    <input asp-for="Status_name" class="form-control" />
                    <span asp-validation-for="Status_name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Сохранить" class="btn br0 btn-secondary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index" class="colortext">Обратно к статусу</a>
    </div>
</body>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
