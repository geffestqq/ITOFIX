@model Diplom.ViewModels.AccountViewModel

@{ ViewData["Title"] = "Delete"; }

<h1 class="text-center colortext">Удаление</h1>
<h4 class="text-center colortext">Аккаунт</h4>
<body class="body">
    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt class="colortext">
                Логин
            </dt>
            <dd class="colortext">
                @Html.DisplayFor(model => model.UserName)
            </dd>
            <dt class="colortext">
                Email
            </dt>
            <dd class="colortext">
                @Html.DisplayFor(model => model.Email)
            </dd>
            <dt class="colortext">
                Телефон
            </dt>
            <dd class="colortext">
                @Html.DisplayFor(model => model.Phone)
            </dd>
            <dt class="colortext">
                Совместительство
            </dt>
            <dd class="colortext">
                @Html.DisplayFor(model => model.PluralityView)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Удалить" class="btn br0 btn-secondary" , onclick="return confirm ('Удалить запись?')" /> |
            <a asp-action="Index" class="colortext">Обратно к аккаунтам</a>
        </form>
    </div>
</body>