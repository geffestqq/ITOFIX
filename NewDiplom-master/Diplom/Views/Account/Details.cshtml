@model Diplom.ViewModels.AccountViewModel

@{ ViewData["Title"] = "Details"; }

<h1 class="text-center colortext">Подробнее</h1>
<h4 class="text-center colortext">Аккаунт</h4>
<body class="body">
    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt class="colortext">
                Логин
            </dt>
            <dd class="colortext">
                @Html.DisplayFor(model => model.UserName)
            </dd>
            <dt class="colortext">
                Email
            </dt>
            <dd class="colortext">
                @Html.DisplayFor(model => model.Email)
            </dd>
            <dt class="colortext">
                Телефон
            </dt>
            <dd class="colortext">
                @Html.DisplayFor(model => model.Phone)
            </dd>
            <dt class="colortext">
                Совместительство
            </dt>
            <dd class="colortext">
                @Html.DisplayFor(model => model.PluralityView)
            </dd>
        </dl>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id" , class="btn br0 btn-secondary">Изменить</a> |
        <a asp-action="Index" class="colortext">Обратно к аккаунтам</a>
    </div>
</body>