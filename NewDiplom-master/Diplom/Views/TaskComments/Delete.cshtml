@model Diplom.Models.TaskComment

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-center colortext">Удаление</h1>
<h4 class="text-center colortext">Комментарий к задаче</h4>
<body class="body">
    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt class="colortext">
                Текст комментария
            </dt>
            <dd class="colortext">
                @Html.DisplayFor(model => model.Text_comment)
            </dd>
            <dt class="colortext">
                Вид комментария
            </dt>
            <dd class="colortext">
                @Html.DisplayFor(model => model.Type_Comments.Name_comment)
            </dd>
            <dt class="colortext">
                Задача
            </dt>
            <dd class="colortext">
                @Html.DisplayFor(model => model.TaskDistributions.View)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Удалить" class="btn br0 btn-secondary" , onclick="return confirm ('Удалить запись?')" /> |
            <a asp-action="Index" class="colortext">Обратно к коментариям</a>
        </form>
    </div>
</body>