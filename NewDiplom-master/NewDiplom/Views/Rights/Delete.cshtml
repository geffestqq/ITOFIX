@model NewDiplom.Models.Right

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-center colortext">Удаление</h1>
<h4 class="text-center colortext">Права</h4>
<body class="body">
    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt class="colortext">
                Выдать
            </dt>
            <dd class="colortext">
                @Html.DisplayFor(model => model.Give_out)
            </dd>
            <dt class="colortext">
                Роль
            </dt>
            <dd class="colortext">
                @Html.DisplayFor(model => model.Role.Name_Role)
            </dd>
            <dt class="colortext">
                Функции
            </dt>
            <dd class="colortext">
                @Html.DisplayFor(model => model.Function.Name_function)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Удалить" class="btn br0 btn-secondary" , onclick="return confirm ('Удалить запись?')" /> |
            <a asp-action="Index" class="colortext">Обратно к правам</a>
        </form>
    </div>
</body>